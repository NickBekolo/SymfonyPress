<header>
    <nav>
        <div class="container nav-inner" aria-label="Main navigation">

            <a class="navbar-brand" href="{{ path('app_home') }}">SymfonyPress</a>

            <div class="nav-links" style="margin-left: auto; display:flex; gap:0.25rem; align-items:center; flex-wrap:wrap;">
                {% for category in categories is defined ? categories : [] %}
                    <a class="nav-link" href="{{ path('category_show', {'slug': category.slug}) }}">{{ category.name }}</a>
                {% endfor %}

                {% if app.user %}
                    <a class="nav-link" href="{{ path('article_list') }}">Mes articles</a>
                    <a class="nav-link" href="{{ path('article_new') }}">Créer un article</a>
                    <form action="{{ path('app_logout') }}" method="POST" class="d-inline" style="margin:0;">
                        <button type="submit" class="btn btn-link nav-link p-0">Déconnexion</button>
                    </form>
                {% else %}
                    <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                {% endif %}
            </div>

        </div>
    </nav>
</header>
